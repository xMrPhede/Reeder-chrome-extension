{
  "manifest_version": 3,
  "name": "Share to Reeder",
  "version": "1.0",
  "description": "Send the current page directly to Reeder via macOS connector.",
  "permissions": ["nativeMessaging", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Share to Reeder"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
